<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>view/index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Handle 404 error-->
    <error-page>
        <error-code>404</error-code>
        <location>/view/404.jsp</location>
    </error-page>

    <!-- Handle 500 error-->
    <error-page>
        <error-code>500</error-code>
        <location>/view/500.jsp</location>
    </error-page>
    
    <!-- Home mapping -->
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>vn.edu.hcmuaf.fit.controller.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home/</url-pattern>
    </servlet-mapping>

    <!-- Product mapping -->
    <servlet>
        <servlet-name>product</servlet-name>
        <servlet-class>vn.edu.hcmuaf.fit.controller.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>product</servlet-name>
        <url-pattern>/product</url-pattern>
        <url-pattern>/product/</url-pattern>
    </servlet-mapping>

    <!-- Contact mapping -->
    <servlet>
        <servlet-name>contact</servlet-name>
        <servlet-class>vn.edu.hcmuaf.fit.controller.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>contact</servlet-name>
        <url-pattern>/contact</url-pattern>
        <url-pattern>/contact/</url-pattern>
    </servlet-mapping>

    <!-- About mapping -->
    <servlet>
        <servlet-name>about</servlet-name>
        <servlet-class>vn.edu.hcmuaf.fit.controller.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>about</servlet-name>
        <url-pattern>/about</url-pattern>
        <url-pattern>/about/</url-pattern>
    </servlet-mapping>

    <!-- Admin mapping -->
    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>vn.edu.hcmuaf.fit.controller.AdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
        <url-pattern>/admin/</url-pattern>
    </servlet-mapping>

    <!-- Database configuration -->
    <context-param>
        <param-name>uid</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>pwd</param-name>
        <param-value/>
    </context-param>
    <context-param>
        <param-name>database</param-name>
        <param-value>furniture_selling</param-value>
    </context-param>
</web-app>